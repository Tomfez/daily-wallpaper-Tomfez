{
    "refreshInterval": {
        "default": 720,
        "description": "Update interval to check new wallpaper",
        "max": 1440,
        "min": 1,
        "step": 5,
        "type": "spinbutton",
        "units": "Minutes"
    },
    "saveWallpaper": {
        "default": false,
        "description": "Save wallpaper to image directory",
        "tooltip": "Save wallpaper to image directory",
        "type": "checkbox"
    },
    "wallpaperDir": {
        "default": "~/.config/bingwallpaper",
        "description": "Image directory",
        "select-dir": true,
        "tooltip": "For example: /home/username/Pictures/wallpapers",
        "type": "filechooser"
    },
    "dailyRefreshState": {
        "default": true,
        "description": "Enable daily refresh",
        "tooltip": "Enable daily refresh",
        "type": "checkbox"
    },
    "selectedImagePreferences": {
        "type": "combobox",
        "default": "Most recent",
        "description": "Selected image",
        "options": {
            "Most recent": 0,
            "Yesterday": 1,
            "Other day": 2
        },
        "tooltip": "Select prefered wallpaper when the applet is launched"
    },
    "wallpaperDateSelect": {
        "type": "datechooser",
        "dependency": "selectedImagePreferences=2",
        "description": "Choose a Date",
        "default": {
            "d": 1,
            "m": 1,
            "y": 2024
        }
    }
}