{
    "layout": {
        "type": "layout",
        "pages": [
            "pageGeneral",
            "pageHelp"
        ],
        "pageGeneral": {
            "type": "page",
            "title": "General",
            "sections": [
                "sectionEnableUpdate",
                "sectionUpdatePreferences",
                "section1"
            ]
        },
        "pageHelp": {
            "type": "page",
            "title": "Help",
            "sections": [
                "sectionDebug"
            ]
        },
        "sectionEnableUpdate": {
            "type": "section",
            "title": "",
            "keys": [
                "dailyRefreshState"
            ]
        },
        "sectionUpdatePreferences": {
            "type": "section",
            "dependency": "dailyRefreshState",
            "title": "Update preferences",
            "keys": [
                "currentSource",
                "selectedImagePreferences",
                "market"
            ]
        },
        "section1": {
            "type": "section",
            "title": "Image preferences",
            "keys": [
                "saveWallpaper",
                "wallpaperDir",
                "image-aspect-options"
            ]
        },
        "sectionDebug": {
            "type": "section",
            "title": "Debug",
            "keys": [
                "refreshInterval",
                "debugToggle"
            ]
        }
    },
    "currentSource": {
        "type": "combobox",
        "default": "bing",
        "description": "Source of images",
        "options": {
            "Bing": "bing",
            "Wikimedia": "wikimedia"
        }
    },
    "refreshInterval": {
        "default": 720,
        "description": "Update interval to check new wallpaper",
        "max": 1440,
        "min": 1,
        "step": 5,
        "type": "spinbutton",
        "units": "Minutes"
    },
    "saveWallpaper": {
        "default": false,
        "description": "Save wallpaper to image directory",
        "type": "checkbox"
    },
    "wallpaperDir": {
        "default": "~/.config/bingwallpaper",
        "description": "Image directory",
        "select-dir": true,
        "tooltip": "For example: /home/username/Pictures/wallpapers",
        "type": "filechooser"
    },
    "dailyRefreshState": {
        "default": true,
        "description": "Enable daily refresh",
        "type": "switch"
    },
    "selectedImagePreferences": {
        "type": "combobox",
        "default": 0,
        "description": "Selected image",
        "options": {
            "Most recent": 0,
            "Random": 1
        },
        "tooltip": "Select the most recent image or a random image when the applet is launched"
    },
    "market": {
        "type": "combobox",
        "default": "auto",
        "description": "Bing locale",
        "options": {
            "auto-auto": "auto",
            "da-DK": "da-DK",
            "de-AT": "de-AT",
            "de-CH": "de-CH",
            "de-DE": "de-DE",
            "en-AU": "en-AU",
            "en-CA": "en-CA",
            "en-GB": "en-GB",
            "en-ID": "en-ID",
            "en-IN": "en-IN",
            "en-MY": "en-MY",
            "en-NZ": "en-NZ",
            "en-PH": "en-PH",
            "en-US": "en-US",
            "en-ZA": "en-ZA",
            "es-AR": "es-AR",
            "es-CL": "es-CL",
            "es-ES": "es-ES",
            "es-MX": "es-MX",
            "es-US": "es-US",
            "fi-FI": "fi-FI",
            "fr-BE": "fr-BE",
            "fr-CA": "fr-CA",
            "fr-CH": "fr-CH",
            "fr-FR": "fr-FR",
            "it-IT": "it-IT",
            "ja-JP": "ja-JP",
            "ko-KR": "ko-KR",
            "nl-BE": "nl-BE",
            "nl-NL": "nl-NL",
            "no-NO": "no-NO",
            "pl-PL": "pl-PL",
            "pt-BR": "pt-BR",
            "ru-RU": "ru-RU",
            "sv-SE": "sv-SE",
            "tr-TR": "tr-TR",
            "zh-CN": "zh-CN",
            "zh-HK": "zh-HK",
            "zh-TW": "zh-TW"
        }
    },
    "image-aspect-options": {
        "type": "combobox",
        "default": "zoom",
        "description": "Image aspect",
        "options": {
            "zoom": "zoom",
            "centered": "centered",
            "scaled": "scaled",
            "stretched": "stretched",
            "spanned": "spanned",
            "wallpaper": "wallpaper"
        }
    },
    "debugToggle": {
        "type": "checkbox",
        "default": false,
        "description": "Debug"
    }
}